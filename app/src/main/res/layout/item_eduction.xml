<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_5sdp">


        <ImageView
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edu_item_dot_icon" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/lora_medium"
            android:textColor="#233062"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="M.B.B.S.,Harvard University,USA" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_delete_24"
            app:tint="@color/cancel"/>
    </LinearLayout>
</layout>